<Window x:Class="policripsysoftware.lw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:policripsysoftware"
        mc:Ignorable="d"
        Title="lw" Height="450" Width="576" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid Margin="0,0,2,0">
        <TextBox x:Name="txtusername" HorizontalAlignment="Left" Height="23" Margin="180,82,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="228" GotFocus="Txtusername_GotFocus"/>
        <Button x:Name="lb" Content="Login" HorizontalAlignment="Left" Margin="216,295,0,0" VerticalAlignment="Top" Width="140" Height="31" Click="Lb_Click"/>
        <CheckBox Content="Ingat Akun?" HorizontalAlignment="Left" Margin="236,243,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtpassword" HorizontalAlignment="Left" Margin="180,159,0,0" VerticalAlignment="Top" Width="228" Height="23" Password="Password" GotFocus="Txtpassword_GotFocus"/>

    </Grid>
</Window>
